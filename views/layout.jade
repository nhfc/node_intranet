doctype html
html(ng-app="Intranet")
  head
    title New Hope Fertility Intranet
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation          
              span.icon-bar    
              span.icon-bar     
              span.icon-bar
            a.navbar-brand(href='/') New Hope Fertility Intranet
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(class=(title == 'Home' ? 'active' : ''))
                a(href='/') Home  
              if !user
                  li(class=(title == 'Login' ? 'active' : ''))
                    a(href='/users/login') Log In
              if user
                  li.dropdown
                    a(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Calls
                    ul.dropdown-menu
                      li
                        a(href='/calls') All Calls
                      li
                        a(href='/calls/new') New
                    
            ul.nav.navbar-nav.navbar-right
              if user
                  li
                    a(href='/users/logout') Logout
      .container
          h1= title      
          != messages()
          block content
    
  footer
      p(class='text-center') Copyright &copy; 2015 New Hope Fertility Center
      
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')   
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
  script(src='/javascripts/angular.min.js')
  block scripts
