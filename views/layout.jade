doctype html
html
  head
    title New Hope Fertility Intranet
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Open+Sans')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
      nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation          
              span.icon-bar    
              span.icon-bar     
              span.icon-bar
            a.navbar-brand(href='/') New Hope Fertility Intranet
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(class=(title == 'Members' ? 'active' : ''))
                a(href='/') Members  
              if !user
                  li(class=(title == 'Register' ? 'active' : ''))
                    a(href='/users/register') Register
                  li(class=(title == 'Login' ? 'active' : ''))
                    a(href='/users/login') Log In
            ul.nav.navbar-nav.navbar-right
              if user
                  li
                    a(href='/users/logout') Logout
      .container
          block content
    
  footer
      p(class='text-center') &copy; 2015, All Rights Reserved
      
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')   
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js')
